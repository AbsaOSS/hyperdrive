<mvc:View height="100%"
		  controllerName="hyperdriver.controller.App"
		  xmlns="sap.m"
		  xmlns:mvc="sap.ui.core.mvc"
		  xmlns:tnt="sap.tnt">
	<tnt:ToolPage
			id="app"
			sideExpanded="false"
			class="sapUiDemoToolPage">
		<tnt:header>
			<tnt:ToolHeader>
				<Button
						visible="{= ${/userInfo/username} !== undefined}"
						id="sideNavigationToggleButton"
						icon="sap-icon://menu2"
						type="Transparent"
						press=".onSideNavButtonPress">
					<layoutData>
						<OverflowToolbarLayoutData priority="NeverOverflow"/>
					</layoutData>
				</Button>
				<ToolbarSpacer/>
				<Title
						text="{i18n>appTitle}"
						level="H2"/>
				<ToolbarSpacer/>
				<Button
						visible="{= ${/userInfo/username} !== undefined}"
						id="userButton"
						text="{/userInfo/username}"
						type="Transparent"
						press=".onUserNamePress">
					<layoutData>
						<OverflowToolbarLayoutData closeOverflowOnInteraction="false"/>
					</layoutData>
				</Button>
			</tnt:ToolHeader>
		</tnt:header>
		<tnt:sideContent>
			<tnt:SideNavigation>
				<tnt:NavigationList
						itemSelect=".onItemSelect"
						visible="{= ${/userInfo/username} !== undefined}"
						items="{
						path: 'side>/navigation',
						templateShareable: false
					}">
					<tnt:NavigationListItem
							text="{side>title}"
							icon="{side>icon}"
							expanded="{side>expanded}"
							items="{
							path: 'side>items',
							templateShareable: false
						}"
							key="{side>key}">
						<tnt:NavigationListItem
								text="{side>title}"
								key="{side>key}">
						</tnt:NavigationListItem>
					</tnt:NavigationListItem>
				</tnt:NavigationList>
				<tnt:fixedItem>
					<tnt:NavigationList
							itemSelect="onFixedItemSelect"
							visible="{= ${/userInfo/username} !== undefined}"
							items="{
							path: 'side>/fixedNavigation',
							templateShareable: false
						}">
						<tnt:NavigationListItem
								text="{side>title}"
								icon="{side>icon}"
								key="{side>key}">
						</tnt:NavigationListItem>
					</tnt:NavigationList>
				</tnt:fixedItem>
			</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<App id="mainContents"/>
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>
